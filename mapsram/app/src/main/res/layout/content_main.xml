<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context="com.example.madwin.listviewitemcontrolexample1.MainActivity"
        tools:showIn="@layout/activity_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/test_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="test data"
                android:visibility="gone" />
        </LinearLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:context="com.example.currentplacedetailsonmap.MapsActivityCurrentPlace">

            <Button
                android:id="@+id/current_location_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginTop="20dp"
                android:alpha="0.7"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:text="현재 위치" />
        </fragment>

        <LinearLayout
            android:id="@+id/nearWork"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:minHeight="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#273236">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="다가오는 일정"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_work"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="안과 처방전 받기"
                    android:textColor="#273236"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/main_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="5월 15일"
                    android:textColor="#8C8C8C"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/main_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="안과 처방전"
                    android:textColor="#8C8C8C"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:minHeight="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/blankLinear"
            android:orientation="vertical">
            <!--
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView />
                <TextView />
                <TextView />
            </TableRow>
        </TableLayout>

            android:isScrollContainer="true"

            -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2,3"
                tools:ignore="MissingConstraints">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#273236"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight = "1" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:text="일정 목록"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CDCDCD"
                    android:layout_weight = "1" >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_no"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:maxLength="3"
                            android:paddingLeft="10dp"
                            android:text="No."/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_date"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20dp"
                            android:maxLength="8"
                            android:paddingLeft="10dp"
                            android:text="날짜"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_work"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20dp"
                            android:maxLength="10"
                            android:paddingLeft="10dp"
                            android:text="내용"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_memo"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20dp"
                            android:maxLength="3"
                            android:paddingLeft="10dp"
                            android:text="장소"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <ListView
                android:id="@+id/itemlist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:choiceMode="singleChoice"

                android:drawSelectorOnTop="false"
                android:layout_below="@+id/blankLinear"
                android:layout_above="@+id/button_contrant"/>
    </LinearLayout>


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/button_contrant"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/btn1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="mOnPopupClick"
                android:src="@drawable/add"/>
            <!--
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="mOnPopupClick"
                android:text="btn1" />
            -->
            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="mInsertClick"
                android:visibility="invisible"
                android:text="btn2" />
            <!-- 비활성화 -->
            <ImageView
                android:id="@+id/btn3"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="mOnPopupClick"
                android:visibility="invisible"
                android:src="@drawable/del"/>

            <!--
            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="mSelectClick"
                android:text="btn3" />
             -->
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
</android.support.constraint.ConstraintLayout>